

type Route {
    id: ID!
    shortName: String,
    longName: String
}

type KPI {
    reachableStops: Int,
    reachableMetroBus: Int,
    reachableMetroBusFoot: Int,
    reachableMetroCar: Int,
    totalPopulation: Int
}

type Query {
    routes: [Route]
    route(id: ID): Route
    kpi(limitStops: Int, limitMetroBus: Int, limitMetroBusFoot: Int, limitMetroCar: Int): KPI
}
